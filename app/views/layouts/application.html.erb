<!DOCTYPE html>
<html>
	<head>
	  <%= render 'layouts/head' %>
	  <%= render 'layouts/analytics' if Rails.env.production? && !admin? %>
	</head>
	<body class="<%= params[:controller] %> <%= params[:action] %> <%= (request.env['PATH_INFO'] == '/') ? 'home' : '' %>">
		<div class="container" id="content-container">
      <%= render 'layouts/ie6_warning' %>
      <%= render 'layouts/flash', flash: flash %>
      <header><div class="row" id="header">
        <div class="ten phone-three columns">
          <h1><a href="/">Skip &amp; Cal</a></h1>
          <p class="tagline"><%= link_to 'cartoons and comics by John Pray', about_path %></p>
        </div>
        <div class="two phone-one columns">
          <%= link_to 'go to nav', '#main-nav', class: 'skip-to-nav small radius green button' %>
          <%= link_to('new comic', new_comic_path, class: "skip-to-nav small white radius button") if admin? %>
        </div>
      </div></header>

      <div class="row" id="content">
      	<div class="twelve columns">
        	<%= yield %>
        </div>
      </div>

      <%= render 'layouts/nav' %>

    </div>
  </body>
</html>
