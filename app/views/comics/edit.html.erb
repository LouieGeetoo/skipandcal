<%= provide(:title, 'Editing a comic') %>

<ul class="breadcrumbs">
	<li><a href="/">Comics</a></li>
	<li><%= link_to @comic.title, @comic %></li>
	<li class="current"><a href="#">New Comic</a></li>
</ul>

<ul class="comics">
	<li class="comic-wrapper">
		<div class="comic row">
			<div class="comic-info seven columns">

		    <%= form_for(@comic, html: {class: 'nice', style: 'margin-bottom: 0;'}) do |f| %>

		    	<%= render 'layouts/error_messages', object: f.object %>

		      <%= render 'comics/fields', f: f %>

		      <%= f.submit "Update comic", :class => "large green button" %>
		      
		    <% end %>
		  </div>
		  <div class="frames five columns">
		    	<p>
		    		<%= link_to "Manage frames", comic_frames_path(@comic), class: "large green radius button" %>
		    	</p>
		    	<p>COLLECTIONS</p>
		  </div>
		</div>
  </li>
</ul>