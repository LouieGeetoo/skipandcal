<%= provide(:title, 'Editing a frame') %>

<ul class="comics">
	<li class="comic-wrapper">
		<div class="comic row">
			<div class="twelve columns">
		    <div class="form-description">
		      <p class="title"><strong>Editing a frame from <%= link_to @comic.title, @comic %>.</strong></p>
		    </div>

		    <%= form_for(@frame, html: {multipart: true, class: 'nice', style: 'margin-bottom: 0;'}) do |f| %>

		    	<%= render 'layouts/error_messages', object: f.object %>

		      <%= render 'frames/fields', f: f %>

		      <%= f.submit "Update frame", :class => "large green button" %>
		      
		    <% end %>
		  </div>
		</div>
  </li>
</ul>